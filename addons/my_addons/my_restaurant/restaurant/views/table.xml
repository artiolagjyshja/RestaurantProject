<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="restaurant_table_view_form" model="ir.ui.view">
    <field name="name">restaurant.table.view.form</field>
    <field name="model">restaurant.table</field>
    <field name="arch" type="xml">
        <form string="Table">
            <sheet>
                <group>
                    <group string="Table Info">
                        <field name="tableNumber"/>
                        <field name="number_of_seats"/>
                        <field name="location"/>
                    </group>

                    <group string="Status &amp; Service">
                        <field name="status" widget="badge"
                               decoration-success="status == 'free'"
                               decoration-danger="status == 'taken'"/>
                        <field name="current_waiter_id"/>
                        <field name="current_order_id" readonly="1" invisible="not current_order_id"/>
                    </group>
                </group>

                <notebook>
                    <page string="Order History">
                        <field name="order_ids" readonly="1"/>
                    </page>
                </notebook>
            </sheet>
        </form>
    </field>
    </record>
    <!-- List View -->
    <record id="restaurant_table_view_tree" model="ir.ui.view">
    <field name="name">restaurant.table.view.tree</field>
    <field name="model">restaurant.table</field>
    <field name="arch" type="xml">
        <tree string="Table" decoration-danger="status == 'taken'" decoration-success="status == 'free'">
            <field name="tableNumber"/>
            <field name="status" widget="badge" decoration-success="status == 'free'" decoration-danger="status == 'taken'"/>
            <field name="current_order_id"/> <field name="number_of_seats"/>
            <field name="location"/>
            <field name="current_waiter_id"/>
        </tree>
    </field>
    </record>

    <!-- search View -->
    <record id="restaurant_table_view_search" model="ir.ui.view">
    <field name="name">restaurant.table.view.search</field>
    <field name="model">restaurant.table</field>
    <field name="arch" type="xml">
        <search string="Table">
            <field name="tableNumber"/>
            <field name="status"/>
            <field name="location"/>
            <filter string="Tavolina të Lira" name="free_tables" domain="[('status', '=', 'free')]"/>
            <filter string="Tavolina të Zëna" name="taken_tables" domain="[('status', '=', 'taken')]"/>
            <separator/>
            <group expand="0" string="Group By">
                <filter string="Statusi" name="group_status" context="{'group_by': 'status'}"/>
                <filter string="Vendndodhja" name="group_location" context="{'group_by': 'location'}"/>
            </group>
        </search>
    </field>
    </record>

    <record id="restaurant_table_view_kanban" model="ir.ui.view">
    <field name="name">restaurant.table.view.kanban</field>
    <field name="model">restaurant.table</field>
    <field name="arch" type="xml">
        <kanban default_group_by="location" class="o_res_partner_kanban">
            <field name="status"/>
            <field name="tableNumber"/>
            <field name="number_of_seats"/>
            <field name="current_waiter_id"/>

            <templates>
                <t t-name="kanban-box">
                    <div t-attf-class="oe_kanban_global_click o_kanban_record_has_image_fill oe_kanban_card #{record.status.raw_value == 'taken' ? 'border-danger' : 'border-success'}"
                         style="border-left: 5px solid; border-radius: 8px; min-height: 100px;">

                        <div class="oe_kanban_details d-flex flex-column">
                            <strong class="o_kanban_record_title" style="font-size: 1.2em;">
                                Tavolina: <field name="tableNumber"/>
                            </strong>

                            <div class="mt-2">
                                <i class="fa fa-users" title="Seats"/> <field name="number_of_seats"/> vende
                            </div>

                            <div class="mt-auto d-flex justify-content-between align-items-center">
                                <span t-attf-class="badge rounded-pill #{record.status.raw_value == 'taken' ? 'text-bg-danger' : 'text-bg-success'}">
                                    <t t-esc="record.status.value"/>
                                </span>

                                <small class="text-muted" t-if="record.current_waiter_id.raw_value">
                                    <i class="fa fa-user-o"/> <field name="current_waiter_id"/>
                                </small>
                            </div>
                        </div>
                    </div>
                </t>
            </templates>
        </kanban>
    </field>
    </record>

    <!-- Action -->
    <record id="restaurant_table_action" model="ir.actions.act_window">
    <field name="name">Table</field>
    <field name="res_model">restaurant.table</field>
    <field name="view_mode">kanban,list,form</field>
    <field name="search_view_id" ref="restaurant_table_view_search"/>
    <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
            Create your first table!
        </p>
    </field>
    </record>
    

</odoo>