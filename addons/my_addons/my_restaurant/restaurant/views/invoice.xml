<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="restaurant_invoice_form_view" model="ir.ui.view">
    <field name="name">restaurant.invoice.view.form</field>
    <field name="model">restaurant.invoice</field>
    <field name="arch" type="xml">
        <form string="Invoice">
            <header>
                <button name="action_confirm"
                        string="Confirm"
                        type="object"
                        class="oe_highlight"
                        invisible="state != 'draft'"/>

                <button name="action_set_paid"
                        string="Mark as Paid"
                        type="object"
                        class="oe_highlight"
                        invisible="state != 'done'"/>

                <field name="state" widget="statusbar" statusbar_visible="draft,done,paid"/>
            </header>

            <sheet>
                <widget name="web_ribbon" title="Paid" bg_color="bg-success" invisible="state != 'paid'"/>
                <widget name="web_ribbon" title="Cancelled" bg_color="bg-danger" invisible="state != 'cancel'"/>

                <div class="oe_title">
                    <label for="invoice_code" string="Invoice Reference"/>
                    <h1>
                        <field name="invoice_code" readonly="1"/>
                    </h1>
                    <h3>
                        <field name="table_id" placeholder="Tavolina" class="oe_inline"/>
                        <span class="mx-2">-</span>
                        <field name="employee_id" placeholder="Kamarieri" class="oe_inline"/>
                    </h3>
                </div>

                <group>
                    <group>
                        <field name="invoice_type" widget="radio" options="{'horizontal': true}"/>
                        <field name="invoice_date"/>
                    </group>
                    <group>
                        <div class="oe_subtotal_footer_separator oe_inline">
                            <label for="final_total_amount" string="Total për të Paguar:"/>
                            <field name="final_total_amount" widget="monetary" options="{'currency_field': 'currency_id'}" style="font-size: 20px; color: #714B67; font-weight: bold;"/>
                        </div>
                    </group>
                </group>

            </sheet>
        </form>
    </field>
    </record>
    <record id="restaurant_invoice_view_tree" model="ir.ui.view">
        <field name="name">restaurant.invoice.view.tree</field>
        <field name="model">restaurant.invoice</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'draft'" decoration-success="state == 'paid'" decoration-warning="state == 'done'">
                <field name="invoice_code"/>
                <field name="invoice_date"/>
                <field name="employee_id"/>
                <field name="table_id"/>
                <field name="final_total_amount" sum="Total"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-warning="state == 'done'" decoration-success="state == 'paid'"/>
            </tree>
        </field>
    </record>

    <record id="restaurant_invoice_view_search" model="ir.ui.view">
        <field name="name">restaurant.invoice.view.search</field>
        <field name="model">restaurant.invoice</field>
        <field name="arch" type="xml">
            <search>
                <field name="invoice_code"/>
                <field name="employee_id"/>
                <field name="table_id"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
                <filter string="Paid" name="paid" domain="[('state', '=', 'paid')]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                    <filter string="Kamarieri" name="group_by_employee" context="{'group_by': 'employee_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="restaurant_invoice_action" model="ir.actions.act_window">
        <field name="name">Invoices</field>
        <field name="res_model">restaurant.invoice</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first invoice!
            </p>
        </field>
    </record>
</odoo>