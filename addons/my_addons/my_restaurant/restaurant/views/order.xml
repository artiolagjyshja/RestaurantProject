<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ================= FORM VIEW ================= -->
    <record id="restaurant_order_view_form" model="ir.ui.view">
        <field name="name">restaurant.order.view.form</field>
        <field name="model">restaurant.order</field>
        <field name="arch" type="xml">
            <form string="Order">

                <!-- invoice_id duhet të jetë prezent për invisible -->
                <field name="invoice_id" invisible="1"/>

                <header>
                    <button name="action_confirm" string="Konfirmo &amp; Përgatit"
                            type="object" class="oe_highlight"
                            invisible="state != 'new'"/>

                    <button name="action_set_ready" string="Bëj Gati"
                            type="object" class="oe_highlight"
                            invisible="state != 'in_preparation'"/>

                    <button name="action_serve_order" string="Shërbe"
                            type="object" class="oe_highlight"
                            invisible="state != 'ready'"/>

                    <button name="action_create_invoice" string="Krijo Faturë"
                            type="object" class="btn-primary"
                            invisible="state != 'served' or invoice_id != False"/>

                    <field name="state" widget="statusbar" statusbar_visible="new,in_preparation,ready,served"/>
                </header>

                <sheet>
                    <group>
                        <field name="name" readonly="1" force_save="1"/>
                        <field name="date_time"/>
                        <field name="state" readonly="1"/>
                    </group>

                    <group>
                        <field name="total_amount" readonly="1"/>
                        <field name="employee_id"/>
                        <field name="table_id"/>
                    </group>

                    <notebook>
                        <page string="Order Lines">
                            <field name="orders_line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="price"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>

                    <group string="Extra Notes">
                        <field name="note"/>
                    </group>
                </sheet>

            </form>
        </field>
    </record>

    <!-- ================= LIST VIEW ================= -->
    <record id="restaurant_order_view_tree" model="ir.ui.view">
        <field name="name">restaurant.order.view.tree</field>
        <field name="model">restaurant.order</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date_time"/>
                <field name="state"/>
                <field name="total_amount"/>
                <field name="note"/>
            </tree>
        </field>
    </record>

    <!-- ================= SEARCH VIEW ================= -->
    <record id="restaurant_order_view_search" model="ir.ui.view">
        <field name="name">restaurant.order.view.search</field>
        <field name="model">restaurant.order</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="date_time"/>
                <field name="state"/>
                <field name="total_amount"/>
                <field name="note"/>
                <field name="table_id"/>
                <field name="employee_id"/>
            </search>
        </field>
    </record>

    <!-- ================= ACTION ================= -->
    <record id="restaurant_order_action" model="ir.actions.act_window">
        <field name="name">Orders</field>
        <field name="res_model">restaurant.order</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first order!
            </p>
        </field>
    </record>

</odoo>
