<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="restaurant_alarm_table_form_view" model="ir.ui.view">
        <field name="name">restaurant.alarm.table.view.form</field>
        <field name="model">restaurant.alarm.table</field>
        <field name="arch" type="xml">
            <form string="Alarmi">
                <header>
                    <button name="action_solve" string="Zgjidh Alarmin" type="object"
                            class="oe_highlight" invisible="state != 'active'"/>
                    <field name="state" widget="statusbar" statusbar_visible="active,solved,invoiced"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="table_id"/>
                            <field name="order_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="start_time" readonly="1"/>
                            <field name="end_time" readonly="1"/>
                            <field name="alarm_cost"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="restaurant_alarm_table_view_tree" model="ir.ui.view">
        <field name="name">restaurant.alarm.table.view.tree</field>
        <field name="model">restaurant.alarm.table</field>
        <field name="arch" type="xml">
            <tree decoration-danger="state == 'active'" decoration-success="state == 'invoiced'">
                <field name="table_id"/>
                <field name="start_time"/>
                <field name="end_time"/>
                <field name="alarm_cost" sum="Total Cost"/>
                <field name="state" widget="badge"
                       decoration-danger="state == 'active'"
                       decoration-info="state == 'solved'"
                       decoration-success="state == 'invoiced'"/>
            </tree>
        </field>
    </record>

    <record id="restaurant_alarm_table_view_search" model="ir.ui.view">
        <field name="name">restaurant.alarm.table.view.search</field>
        <field name="model">restaurant.alarm.table</field>
        <field name="arch" type="xml">
            <search>
                <field name="table_id"/>
                <field name="state"/>
                <filter string="Aktive" name="active_alarms" domain="[('state', '=', 'active')]"/>
                <filter string="Të Zgjidhura" name="solved_alarms" domain="[('state', '=', 'solved')]"/>
                <group expand="0" string="Grupim sipas">
                    <filter string="Tavolinës" name="group_by_table" context="{'group_by': 'table_id'}"/>
                    <filter string="Statusit" name="group_by_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="restaurant_alarm_table_action" model="ir.actions.act_window">
        <field name="name">Alarm Table</field>
        <field name="res_model">restaurant.alarm.table</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Nuk ka asnjë alarm aktiv.
            </p>
        </field>
    </record>
</odoo>